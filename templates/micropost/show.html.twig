{% extends 'base.html.twig' %}

{% block title %}
  Post - {{ post.title }}
{% endblock %}

{% block body %}
  <h3>{{ post.title }}</h3>
  <div>{{ post.text }}</div>
  <div style="color: grey;">
    {% if date(post.datetime) < date('-1year') %}
      Older than 1 year
    {% else %}
      {{ post.datetime|date('d/m/Y H:i:s') }}
    {% endif %}
  </div>
{% endblock %}
